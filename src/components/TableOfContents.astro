---
export interface Heading {
  depth: number
  slug: string
  text: string
}

interface Props {
  headings: Heading[]
}

const { headings } = Astro.props
---

<nav class="toc" aria-label="Table of Contents">
  <div class="toc-header">Contents</div>
  <ul class="toc-list">
    {
      headings.map((heading) => (
        <li class={`toc-item toc-depth-${heading.depth}`}>
          <a href={`#${heading.slug}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .toc {
    position: fixed;
    left: calc(50% + (700px / 2) + 4rem);
    top: 4rem;
    width: 280px;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
    padding: 1rem;
    background: var(--color-bg);
    font-size: 0.875rem;
    transition: background-color 0.3s ease;
  }

  /* On smaller large screens, position from right edge instead */
  @media (max-width: 1600px) {
    .toc {
      left: auto;
      right: 1.5rem;
      width: 240px;
    }
  }

  /* Hide TOC on screens where it would overlap */
  @media (max-width: 1380px) {
    .toc {
      display: none;
    }
  }

  .toc-header {
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0;
    line-height: 1;
  }

  .toc-depth-2 {
    padding-left: 0;
  }

  .toc-depth-3 {
    padding-left: 0.75rem;
  }

  .toc-depth-4 {
    padding-left: 1.5rem;
  }

  .toc-link {
    display: block;
    color: var(--color-text-muted);
    text-decoration: none;
    padding: 0.25rem 0;
    transition: color 0.2s ease;
  }

  .toc-link:hover {
    color: var(--color-link);
  }

  .toc-link.active {
    color: var(--color-link);
    font-weight: 600;
  }

  /* Custom scrollbar for TOC */
  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }

  .toc::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-muted);
  }
</style>

<script>
  // Highlight the active heading in the TOC based on scroll position
  const headingElements = document.querySelectorAll(
    '.prose h2, .prose h3, .prose h4'
  )
  const tocLinks = document.querySelectorAll('.toc-link')

  let userClickedLink = false
  let clickTimeout: ReturnType<typeof setTimeout> | null = null

  // Set active link
  function setActiveLink(id: string) {
    tocLinks.forEach((link) => link.classList.remove('active'))
    const activeLink = document.querySelector(`.toc-link[href="#${id}"]`)
    activeLink?.classList.add('active')
  }

  // Find and set the active heading based on scroll position
  // Uses the same logic as clicking: the heading at/near the top of viewport is active
  function updateActiveHeading() {
    if (userClickedLink) return

    let activeHeading: string | null = null

    headingElements.forEach((heading) => {
      const id = heading.getAttribute('id')
      if (!id) return

      const rect = heading.getBoundingClientRect()
      // Heading is active when its top has reached/passed the top of viewport
      // (same position as when clicking a TOC link scrolls to it)
      if (rect.top <= 100) {
        activeHeading = id
      }
    })

    if (activeHeading) {
      setActiveLink(activeHeading)
    } else if (headingElements.length > 0) {
      // At top of page before any heading scrolls past - activate first heading
      const firstId = headingElements[0].getAttribute('id')
      if (firstId) {
        setActiveLink(firstId)
      }
    }
  }

  // Throttled scroll handler using requestAnimationFrame
  let ticking = false
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateActiveHeading()
        ticking = false
      })
      ticking = true
    }
  })

  // Handle click events on TOC links
  tocLinks.forEach((link) => {
    link.addEventListener('click', (e) => {
      const href = link.getAttribute('href')
      if (href && href.startsWith('#')) {
        const id = href.slice(1)

        // Set flag to prevent scroll handler from overriding
        userClickedLink = true

        // Clear any existing timeout
        if (clickTimeout) {
          clearTimeout(clickTimeout)
        }

        // Set active link immediately
        setActiveLink(id)

        // Re-enable scroll handler after scroll animation completes
        clickTimeout = setTimeout(() => {
          userClickedLink = false
        }, 1000)
      }
    })
  })

  // Set initial active link
  if (window.location.hash) {
    const id = window.location.hash.slice(1)
    setActiveLink(id)
  } else {
    // Run initial update on page load
    updateActiveHeading()
  }
</script>
