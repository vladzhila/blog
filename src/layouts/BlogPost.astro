---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import type { MarkdownHeading } from 'astro'
import SidebarLayout from './SidebarLayout.astro'
import FormattedDate from '../components/FormattedDate.astro'
import TableOfContents from '../components/TableOfContents.astro'
import { SITE_TITLE } from '../consts'

type Props = CollectionEntry<'blog'>['data'] & {
  headings?: MarkdownHeading[]
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  headings = [],
} = Astro.props
---

<SidebarLayout title={`${title} | ${SITE_TITLE}`} description={description}>
  <article class="blog-post">
    {
      heroImage && (
        <div class="hero-image">
          <Image width={1020} height={510} src={heroImage} alt="" />
        </div>
      )
    }
    <div class="prose">
      <div class="post-header">
        <h1 id="title">{title}</h1>
        <div class="date">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
        <hr />
      </div>
      <slot />
    </div>
  </article>

  <div
    id="image-zoom-modal"
    class="image-zoom-modal"
    role="dialog"
    aria-hidden="true"
  >
    <div class="image-zoom-backdrop"></div>
    <div class="image-zoom-container">
      <img id="image-zoom-content" src="" alt="" />
    </div>
  </div>

  {headings.length > 0 && <TableOfContents headings={headings} />}
</SidebarLayout>

<style>
  .blog-post {
    max-width: 750px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  .hero-image {
    margin-bottom: 2em;
  }

  .hero-image img {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .prose {
    color: var(--color-text);
    width: 100%;
    box-sizing: border-box;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  /* Ensure content doesn't overflow on smaller screens */
  @media (max-width: 768px) {
    .blog-post {
      max-width: 100%;
      padding: 0;
    }

    .prose {
      padding: 0;
    }

    .post-header h1 {
      word-wrap: break-word;
    }
  }

  .post-header {
    margin-bottom: 2em;
  }

  .post-header h1 {
    font-size: 1.5em;
    margin: 0 0 0.5em 0;
    line-height: 1.2;
  }

  .date {
    color: var(--color-text-muted);
    font-size: 0.95em;
    margin-bottom: 1em;
  }

  .last-updated-on {
    font-style: italic;
    margin-top: 0.5em;
  }

  .post-header hr {
    margin: 1.5em 0;
  }

  /* Heading anchor links */
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    position: relative;
    scroll-margin-top: 1rem;
  }

  /* More scroll margin on mobile to account for sticky header */
  @media (max-width: 1200px) {
    .prose :global(h1),
    .prose :global(h2),
    .prose :global(h3),
    .prose :global(h4),
    .prose :global(h5),
    .prose :global(h6) {
      scroll-margin-top: 6rem;
    }
  }

  .prose :global(h1:hover),
  .prose :global(h2:hover),
  .prose :global(h3:hover),
  .prose :global(h4:hover),
  .prose :global(h5:hover),
  .prose :global(h6:hover) {
    cursor: pointer;
  }

  .prose :global(h1:not(#title)::before),
  .prose :global(h2::before),
  .prose :global(h3::before),
  .prose :global(h4::before),
  .prose :global(h5::before),
  .prose :global(h6::before) {
    content: '#';
    position: absolute;
    left: -1.7rem;
    color: var(--accent);
    opacity: 0;
    transition: opacity 0.2s ease;
    font-weight: 400;
  }

  .prose :global(h1:not(#title):hover::before),
  .prose :global(h2:hover::before),
  .prose :global(h3:hover::before),
  .prose :global(h4:hover::before),
  .prose :global(h5:hover::before),
  .prose :global(h6:hover::before) {
    opacity: 0.5;
  }

  /* Image with caption styling */
  .prose :global(.image-with-caption) {
    margin: 2em 0;
    text-align: center;
  }

  .prose :global(.image-with-caption img) {
    margin-bottom: 0;
  }

  .prose :global(.image-caption) {
    margin-top: 0.75em;
    margin-bottom: 0;
    font-size: 0.9em;
    color: var(--color-text-muted);
    text-align: center;
  }

  .prose :global(.image-caption a) {
    color: var(--accent);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .prose :global(.image-caption a:hover) {
    color: var(--accent-dark);
  }

  /* Image zoom functionality */
  .prose :global(img) {
    cursor: pointer;
  }

  /* Image zoom modal */
  .image-zoom-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .image-zoom-modal.active {
    display: flex;
  }

  .image-zoom-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    cursor: pointer;
    animation: fadeIn 0.2s ease;
  }

  .image-zoom-container {
    position: relative;
    z-index: 1;
    max-width: 90vw;
    max-height: 90vh;
    animation: scaleIn 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  #image-zoom-content {
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    display: block;
    cursor: pointer;
    border-radius: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .image-zoom-container {
      max-width: 95vw;
      max-height: 95vh;
    }

    #image-zoom-content {
      max-width: 95vw;
      max-height: 95vh;
    }
  }
</style>

<script>
  // Make headings clickable to update anchor link
  document.addEventListener('DOMContentLoaded', () => {
    const headings = document.querySelectorAll(
      '.prose h1:not(#title), .prose h2, .prose h3, .prose h4, .prose h5, .prose h6'
    )

    headings.forEach((heading) => {
      heading.addEventListener('click', () => {
        const id = heading.getAttribute('id')
        if (id) {
          const url = new URL(window.location.href)

          if (id === 'title') {
            url.hash = ''
          } else {
            url.hash = id
          }

          window.history.pushState({}, '', url)

          // Scroll to the heading smoothly
          heading.scrollIntoView({ behavior: 'smooth', block: 'start' })

          // Copy to clipboard silently
          navigator.clipboard.writeText(url.toString())
        }
      })
    })
  })
</script>

<script>
  // Image zoom functionality
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('image-zoom-modal')
    const modalImage = document.getElementById(
      'image-zoom-content'
    ) as HTMLImageElement | null
    const backdrop = document.querySelector('.image-zoom-backdrop')
    const images = document.querySelectorAll('.prose img')

    let previouslyFocusedElement: HTMLElement | null = null

    // Open modal function
    function openModal(
      imageSrc: string,
      imageAlt: string,
      clickedImage: HTMLElement
    ) {
      if (!modalImage) return

      modalImage.src = imageSrc
      modalImage.alt = imageAlt
      modal?.classList.add('active')
      modal?.setAttribute('aria-hidden', 'false')

      // Store previously focused element
      previouslyFocusedElement = clickedImage

      // Prevent body scrolling
      document.body.style.overflow = 'hidden'
    }

    // Close modal function
    function closeModal() {
      modal?.classList.remove('active')
      modal?.setAttribute('aria-hidden', 'true')

      // Clear image
      if (modalImage) {
        modalImage.src = ''
        modalImage.alt = ''
      }

      // Restore body scrolling
      document.body.style.overflow = ''

      // Restore focus to previously clicked image
      if (previouslyFocusedElement) {
        previouslyFocusedElement.focus()
        previouslyFocusedElement = null
      }
    }

    // Add click listeners to all images in prose content
    images.forEach((image) => {
      const imgElement = image as HTMLImageElement
      imgElement.addEventListener('click', () => {
        openModal(imgElement.src, imgElement.alt, imgElement)
      })
    })

    // Backdrop click handler
    backdrop?.addEventListener('click', closeModal)

    // Modal image click handler (for quick dismiss)
    modalImage?.addEventListener('click', closeModal)

    // Escape key handler
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && modal?.classList.contains('active')) {
        closeModal()
      }
    })
  })
</script>
