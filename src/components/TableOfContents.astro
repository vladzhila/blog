---
export interface Heading {
  depth: number
  slug: string
  text: string
}

interface Props {
  headings: Heading[]
}

const { headings } = Astro.props
---

<script is:inline>
  // Runs immediately to prevent FOUC
  ;(function () {
    if (localStorage.getItem('toc-collapsed') === 'true') {
      document.documentElement.classList.add('toc-starts-collapsed')
    }
  })()
</script>

<nav class="toc" aria-label="Table of Contents">
  <button class="toc-toggle" aria-expanded="true" aria-controls="toc-content">
    <span class="toc-header">Contents</span>
    <svg
      class="toc-chevron"
      width="12"
      height="12"
      viewBox="0 0 12 12"
      fill="none"
      aria-hidden="true"
    >
      <path
        d="M2.5 4.5L6 8L9.5 4.5"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
  <div id="toc-content" class="toc-content">
    <ul class="toc-list">
      {
        headings.map((heading) => (
          <li class={`toc-item toc-depth-${heading.depth}`}>
            <a href={`#${heading.slug}`} class="toc-link">
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  .toc {
    position: fixed;
    left: calc(50% + (700px / 2) + 4rem);
    top: 4rem;
    width: 300px;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
    padding: 1rem;
    background: var(--color-bg);
    font-size: 0.875rem;
    transition: background-color 0.3s ease;
  }

  /* On smaller large screens, position from right edge instead */
  @media (max-width: 1600px) {
    .toc {
      left: auto;
      right: 1.5rem;
      width: 240px;
    }
  }

  /* Hide TOC on screens where it would overlap */
  @media (max-width: 1380px) {
    .toc {
      display: none;
    }
  }

  /* Toggle button */
  .toc-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0;
    margin-bottom: 0.75rem;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
  }

  .toc-header {
    font-weight: 700;
    color: var(--accent);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }

  .toc-chevron {
    color: var(--color-text-muted);
    transition: transform 0.25s ease;
    flex-shrink: 0;
  }

  .toc-toggle:hover .toc-chevron {
    color: var(--accent);
  }

  .toc-toggle[aria-expanded='false'] .toc-chevron {
    transform: rotate(-90deg);
  }

  /* Collapsible content */
  .toc-content {
    display: grid;
    grid-template-rows: 1fr;
    transition: grid-template-rows 0.25s ease;
  }

  .toc-content > ul {
    overflow: hidden;
  }

  .toc.collapsed .toc-content {
    grid-template-rows: 0fr;
  }

  /* Initial collapsed state (no transition to prevent FOUC) */
  :global(html.toc-starts-collapsed) .toc-content {
    grid-template-rows: 0fr;
    transition: none;
  }

  :global(html.toc-starts-collapsed) .toc-chevron {
    transform: rotate(-90deg);
    transition: none;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0;
    line-height: 1;
  }

  .toc-depth-2 {
    padding-left: 0;
  }

  .toc-depth-3 {
    padding-left: 0.75rem;
  }

  .toc-depth-4 {
    padding-left: 1.5rem;
  }

  .toc-link {
    display: block;
    color: var(--color-text-muted);
    text-decoration: none;
    padding: 0.25rem 0;
    transition: color 0.2s ease;
  }

  .toc-link:hover {
    color: var(--color-link);
  }

  .toc-link.active {
    color: var(--color-link);
    font-weight: 600;
  }

  /* Custom scrollbar for TOC */
  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }

  .toc::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-muted);
  }
</style>

<script>
  const STORAGE_KEY = 'toc-collapsed'
  const toc = document.querySelector('.toc') as HTMLElement
  const toggleBtn = document.querySelector('.toc-toggle') as HTMLButtonElement

  // Restore collapsed state and enable transitions
  function restoreState() {
    const isCollapsed = localStorage.getItem(STORAGE_KEY) === 'true'
    if (isCollapsed) {
      toc.classList.add('collapsed')
      toggleBtn.setAttribute('aria-expanded', 'false')
    }
    // Remove the FOUC-prevention class and re-enable transitions
    requestAnimationFrame(() => {
      document.documentElement.classList.remove('toc-starts-collapsed')
    })
  }

  // Toggle collapsed state
  function toggleToc() {
    const isCollapsed = toc.classList.toggle('collapsed')
    toggleBtn.setAttribute('aria-expanded', String(!isCollapsed))
    localStorage.setItem(STORAGE_KEY, String(isCollapsed))
  }

  toggleBtn.addEventListener('click', toggleToc)
  restoreState()

  // Highlight the active heading in the TOC based on scroll position
  const headingElements = document.querySelectorAll(
    '.prose h1:not(#title), .prose h2, .prose h3, .prose h4'
  )
  const tocLinks = document.querySelectorAll('.toc-link')

  let userClickedLink = false
  let clickTimeout: ReturnType<typeof setTimeout> | null = null

  // Set active link
  function setActiveLink(id: string) {
    tocLinks.forEach((link) => link.classList.remove('active'))
    const activeLink = document.querySelector(`.toc-link[href="#${id}"]`)
    activeLink?.classList.add('active')
  }

  // Find and set the active heading based on scroll position
  // Heading is active when it's closest to the center of the viewport
  function updateActiveHeading() {
    if (userClickedLink) return

    const viewportCenter = window.innerHeight / 2
    let closestHeading: string | null = null
    let closestDistance = Infinity

    headingElements.forEach((heading) => {
      const id = heading.getAttribute('id')
      if (!id) return

      const rect = heading.getBoundingClientRect()
      // Calculate distance from heading to viewport center
      const headingCenter = rect.top + rect.height / 2
      const distance = Math.abs(headingCenter - viewportCenter)

      // Track the heading closest to viewport center
      if (distance < closestDistance) {
        closestDistance = distance
        closestHeading = id
      }
    })

    if (closestHeading) {
      setActiveLink(closestHeading)
    } else if (headingElements.length > 0) {
      // Fallback: activate first heading
      const firstId = headingElements[0].getAttribute('id')
      if (firstId) {
        setActiveLink(firstId)
      }
    }
  }

  // Throttled scroll handler using requestAnimationFrame
  let ticking = false
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateActiveHeading()
        ticking = false
      })
      ticking = true
    }
  })

  // Handle click events on TOC links
  tocLinks.forEach((link) => {
    link.addEventListener('click', (e) => {
      const href = link.getAttribute('href')
      if (href && href.startsWith('#')) {
        const id = href.slice(1)

        // Set flag to prevent scroll handler from overriding
        userClickedLink = true

        // Clear any existing timeout
        if (clickTimeout) {
          clearTimeout(clickTimeout)
        }

        // Set active link immediately
        setActiveLink(id)

        // Re-enable scroll handler after scroll animation completes
        clickTimeout = setTimeout(() => {
          userClickedLink = false
        }, 1000)
      }
    })
  })

  // Set initial active link
  if (window.location.hash) {
    const id = window.location.hash.slice(1)
    setActiveLink(id)
  } else {
    // Run initial update on page load
    updateActiveHeading()
  }
</script>
