---
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'
// import ThemeToggle from './ThemeToggle.astro'
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/" class="avatar-link">
      <img src="/avatar.jpg" alt={SITE_TITLE} class="avatar" />
    </a>
  </div>

  <nav class="sidebar-nav">
    <HeaderLink href="/">About</HeaderLink>
    <HeaderLink href="/writing">Writing</HeaderLink>
  </nav>

  <!-- <footer class="sidebar-footer"> -->
  <!-- <div class="footer-content">
      <p>&copy; {new Date().getFullYear()} {SITE_TITLE}</p>
    </div> -->
  <!-- <ThemeToggle /> -->
  <!-- </footer> -->
</aside>

<style>
  .sidebar {
    position: fixed;
    left: calc(50% - (750px / 2) - 220px - 4rem);
    top: 0;
    bottom: 0;
    width: 220px;
    background: var(--color-bg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 3em 2em;
    z-index: 100;
    box-sizing: border-box;
    transition: background-color 0.3s ease;
  }

  .sidebar-header {
    margin-bottom: 3em;
  }

  .avatar-link {
    text-decoration: none;
  }

  .avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-border);
  }

  .sidebar-nav {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .sidebar-footer {
    margin-top: auto;
    padding-top: 2em;
    font-size: 0.9em;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1em;
  }

  .footer-content p {
    margin: 0;
  }

  /* Medium screens: Position sidebar on left without complex calc */
  @media (max-width: 1380px) {
    .sidebar {
      left: 0;
    }
  }

  /* Tablets and below: Convert to horizontal sticky header */
  @media (max-width: 1200px) {
    .sidebar {
      position: sticky;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      flex-direction: row;
      align-items: center;
      justify-content: flex-start;
      padding: 1em 1.5em;
      border-bottom: 1px solid var(--color-border);
      gap: 2em;
    }

    .sidebar-header {
      margin-bottom: 0;
      margin-right: 0;
      display: flex;
      align-items: center;
    }

    .avatar-link {
      display: flex;
      align-items: center;
    }

    .avatar {
      width: 36px;
      height: 36px;
    }

    .sidebar-nav {
      flex-direction: row;
      gap: 1.5em;
      margin-left: 0;
      margin-right: 0;
      flex: 0;
    }

    .sidebar-footer {
      margin-left: auto;
      margin-top: 0;
      padding-top: 0;
    }

    .footer-content {
      display: none;
    }
  }

  /* Mobile: Smaller text and tighter spacing */
  @media (max-width: 768px) {
    .sidebar {
      padding: 0.75em 1em;
      gap: 1em;
    }

    .avatar {
      width: 32px;
      height: 32px;
    }

    .sidebar-nav {
      gap: 0.75em;
    }
  }

  /* Very small mobile: Stack vertically if needed */
  @media (max-width: 480px) {
    .sidebar {
      gap: 0.5em;
      padding: 0.5em 0.75em;
    }

    .avatar {
      width: 28px;
      height: 28px;
    }

    .sidebar-nav {
      gap: 0.5em;
      font-size: 0.9em;
    }
  }
</style>
